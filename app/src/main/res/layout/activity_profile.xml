<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfileActivity">

    <TextView
        android:id="@+id/tvProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:text="@string/tv_profile"
        android:fontFamily="@font/boldinter"
        android:textSize="28sp"
        android:textColor="@color/purple"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:background="@drawable/by_view_rectangle1"
        app:layout_constraintTop_toBottomOf="@+id/tvProfile"/>

    <View
        android:layout_width="162dp"
        android:layout_height="150dp"
        android:layout_marginTop="14dp"
        android:background="@drawable/by_view_circle"
        app:layout_constraintTop_toBottomOf="@+id/tvProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/ivProfile"
        android:layout_width="132dp"
        android:layout_height="132dp"
        android:layout_marginTop="30dp"
        android:src="@drawable/photo"
        app:layout_constraintTop_toBottomOf="@+id/tvProfile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tvName_Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/h_name"
        android:layout_marginTop="28dp"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="26sp"
        android:textColor="@color/purple"
        android:fontFamily="@font/boldinter"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/ivProfile"/>

    <TextView
        android:id="@+id/tvRole_Profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/h_role"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:textSize="20sp"
        android:textColor="@color/purple"
        android:fontFamily="@font/regularinter"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@+id/tvName_Profile"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnEditProfile"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/boldinter"
        style="@android:style/Widget.Button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bottom_bg_purple"
        android:drawableStart="@drawable/ic_edit"
        android:drawableTint="@color/white"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:text="@string/btn_EditProfile"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/tvRole_Profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnFeedback"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/boldinter"
        style="@android:style/Widget.Button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bottom_bg_purple"
        android:drawableStart="@drawable/ic_feedback"
        android:drawableTint="@color/white"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:text="@string/btn_feedback"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/btnEditProfile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnHelpCenter"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/boldinter"
        style="@android:style/Widget.Button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bottom_bg_purple"
        android:drawableStart="@drawable/ic_help_center"
        android:drawableTint="@color/white"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:text="@string/btn_helpCenter"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/btnFeedback"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnLogout"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="32dp"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:fontFamily="@font/boldinter"
        style="@android:style/Widget.Button"
        android:layout_marginBottom="10dp"
        android:background="@drawable/bottom_bg_purple"
        android:drawableStart="@drawable/ic_logout"
        android:drawableTint="@color/white"
        android:drawablePadding="20dp"
        android:paddingStart="20dp"
        android:text="@string/btn_logout"
        android:textAlignment="viewStart"
        app:layout_constraintTop_toBottomOf="@id/btnHelpCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/bottom_background"
        android:elevation="2dp"
        app:itemIconSize="30dp"
        app:itemIconTint="@drawable/item_selector"
        app:itemRippleColor="@android:color/transparent"
        app:labelVisibilityMode="unlabeled"
        app:menu="@menu/bottom_menu"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>